# Application Settings
APP_NAME=Saathy Conversational AI
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://saathy:saathy@localhost:5432/saathy_conversational
REDIS_URL=redis://localhost:6379

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=documents
QDRANT_VECTOR_SIZE=1536

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-1106-preview

# Security
SECRET_KEY=your-super-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Session Management
SESSION_TTL_HOURS=24
MAX_SESSION_TURNS=100
CONTEXT_CACHE_TTL_SECONDS=300

# Performance Settings
MAX_CONCURRENT_SESSIONS=100
RESPONSE_TIMEOUT_SECONDS=30
MAX_CONTEXT_TOKENS=8000

# Retrieval Settings
VECTOR_SEARCH_LIMIT=20
EVENT_SEARCH_LIMIT=50
ACTION_SEARCH_LIMIT=20

# Agent Configuration
SUFFICIENCY_THRESHOLD=0.7
MAX_CONTEXT_EXPANSIONS=3

# Docker Compose Settings
POSTGRES_PASSWORD=saathy
GRAFANA_PASSWORD=admin