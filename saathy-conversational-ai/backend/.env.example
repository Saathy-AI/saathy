# Saathy Conversational AI Configuration
# Copy this file to .env and fill in your values

# Core Settings
APP_NAME="Saathy Conversational AI"
APP_VERSION="2.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
MAX_CONTEXT_TOKENS=4000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/saathy_chat
POSTGRES_USER=saathy_user
POSTGRES_PASSWORD=your-password
POSTGRES_DB=saathy_chat

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
SESSION_TTL_HOURS=24

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Phase 2: Agentic Intelligence Settings
MAX_EXPANSION_ATTEMPTS=3
SUFFICIENCY_THRESHOLD=0.7
RRF_K=60
RESPONSE_TEMPERATURE=0.7

# Agent-specific Settings
ENTITY_COVERAGE_WEIGHT=0.3
TEMPORAL_RELEVANCE_WEIGHT=0.2
GPT4_COMPLETENESS_WEIGHT=0.4
PLATFORM_COVERAGE_WEIGHT=0.1

# Expansion Thresholds
TEMPORAL_EXPANSION_THRESHOLD=0.6
PLATFORM_EXPANSION_THRESHOLD=0.5
ENTITY_EXPANSION_THRESHOLD=0.7

# Phase 3: Intelligence Optimization Settings

# Memory Compression (COMEDY)
COMPRESSION_THRESHOLD=5
MAX_RECENT_TURNS=3
ENTITY_IMPORTANCE_THRESHOLD=0.6

# Caching Configuration
CACHE_TTL_QUERY=300  # 5 minutes
CACHE_TTL_CONTEXT=600  # 10 minutes
CACHE_TTL_EMBEDDING=1800  # 30 minutes
CACHE_TTL_RESULT=180  # 3 minutes
QUERY_CACHE_SIZE=1000
CONTEXT_CACHE_SIZE=500
EMBEDDING_CACHE_SIZE=2000
RESULT_CACHE_SIZE=300

# Quality Metrics Thresholds
LOW_SATISFACTION_THRESHOLD=0.5
SLOW_RESPONSE_THRESHOLD=2.0  # seconds
LOW_SUFFICIENCY_THRESHOLD=0.6
HIGH_EXPANSION_RATE_THRESHOLD=0.3

# Learning Optimization
LEARNING_RATE=0.1
LEARNING_BATCH_SIZE=100
LEARNING_UPDATE_INTERVAL=3600  # 1 hour

# Initial Retrieval Weights
RETRIEVAL_WEIGHT_VECTOR=0.4
RETRIEVAL_WEIGHT_STRUCTURED=0.3
RETRIEVAL_WEIGHT_ACTION=0.3

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_V2_ENDPOINTS=true
ENABLE_LEARNING=true
ENABLE_CACHING=true
ENABLE_METRICS=true