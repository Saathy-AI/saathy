# General Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
TIMEZONE=UTC

# API Configuration
APP_NAME=saathy-core-api
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration - Qdrant (Vector Database)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=saathy_content
QDRANT_VECTOR_SIZE=384

# Redis Configuration (Caching & Pub/Sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration (Conversational AI)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=saathy
POSTGRES_PASSWORD=saathy_password
POSTGRES_DB=saathy_conversations

# Embedding Service Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# GitHub Connector Configuration
GITHUB_ENABLED=true
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=
GITHUB_OWNER=
GITHUB_REPO=

# Slack Connector Configuration
SLACK_ENABLED=true
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_DEFAULT_CHANNELS=general,random

# Notion Connector Configuration
NOTION_ENABLED=true
NOTION_TOKEN=
NOTION_DATABASES=
NOTION_PAGES=
NOTION_POLL_INTERVAL=300

# Enterprise Features
ENTERPRISE_FEATURES_ENABLED=false
LICENSE_KEY=

# Feature Flags
INTELLIGENCE_ENABLED=true
STREAMING_ENABLED=true
WEBHOOKS_ENABLED=true

# Security
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831